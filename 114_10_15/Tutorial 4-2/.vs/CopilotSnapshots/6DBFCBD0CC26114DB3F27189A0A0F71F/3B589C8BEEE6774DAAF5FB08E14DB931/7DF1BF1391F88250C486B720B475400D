using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Linq.Expressions;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace Payroll_with_Overtime
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }

        private void calculateButton_Click(object sender, EventArgs e)
        {
           const decimal Base_HOURS = 40m; 
            const decimal Overtime_RATE = 1.5m;
    
                decimal hoursWorked;      // To hold the hours worked.
                decimal hourlyPayRate;    // To hold the hourly pay rate.
                decimal grossPay;         // To hold the gross pay.
    
                // Get the hours worked.
                if (decimal.TryParse(hoursWorkedTextBox.Text, out hoursWorked))
                {
                 // Get the hourly pay rate.
                 if (decimal.TryParse(hourlyPayRateTextBox.Text, out hourlyPayRate))
                 {
                      // Calculate the gross pay.
                      if (hoursWorked <= Base_HOURS)
                      {
                            grossPay = hoursWorked * hourlyPayRate;
                      }
                      else
                      {
                            grossPay = (Base_HOURS * hourlyPayRate) +
                                      ((hoursWorked - Base_HOURS) *
                                      (hourlyPayRate * Overtime_RATE));
                      }
    
                      // Display the gross pay.
                      grossPayLabel.Text = grossPay.ToString("c");
                 }
                 else
                 {
                      // Display an error message.
                      MessageBox.Show("Please enter a valid number for the " +
                                        "hourly pay rate.");
                 }
                }
                else
                {
                 // Display an error message.
                 MessageBox.Show("Please enter a valid number for the " +
                                  "hours worked.");
            }
                try
            {
                hoursWorked=decimal.Parse(hoursWorkedTextBox.Text); 
                hourlyPayRate=decimal.Parse(hourlyPayRateTextBox.Text);
                 if (hoursWorked <= Base_HOURS)
                      {
                            grossPay = hoursWorked * hourlyPayRate;
                      }
                      else
                      {
                            grossPay = (Base_HOURS * hourlyPayRate) +
                                      ((hoursWorked - Base_HOURS) *(hourlyPayRate *OT_MULTIPLIER);
                      }
                catch(Exception ex)
                (
                MessageBox.Show(ex.Message);        )
    
                      // Display the gross pay.
                      grossPayLabel.Text = grossPay.ToString("c");
            }
        }

        private void clearButton_Click(object sender, EventArgs e)
        {
            // Clear the TextBoxes and gross pay label.
            hoursWorkedTextBox.Text = "";
            hourlyPayRateTextBox.Text = "";
            grossPayLabel.Text = "";

            // Reset the focus.
            hoursWorkedTextBox.Focus();
        }

        private void exitButton_Click(object sender, EventArgs e)
        {
            // Close the form.
            this.Close();
        }
    }
}
